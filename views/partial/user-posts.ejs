				<nav class="pagination" role="navigation" username=<%=user.name%>>
					<a href="/u/<%=user.name%>/?page=1" class="btn-page up-page btn-inaction">上一页</a>
					<span class="page-number" pagenum=1 maxpage=<%=Math.ceil(articles.length/6)%>>1 / <%= Math.ceil(articles.length/6)%></span>
