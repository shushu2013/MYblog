				<% if (articles.length === 0) { %>
					<li>还未发表文章，赶紧去发表哦！</li>
				<% } else { %>

					<% articles.slice(0, 5).forEach(function(article, index) { %>
						<li>
							<h2 class="post-title">
								<a href="<%=article.url %>" title="<%=article.title%>">
									<%=article.title%>
								</a>
							</h2>
							<p class="post-text">
								<%-article.text%>
							</p>
							<div class="post-meta">
								<time data-time="<%=article.time%>" class="post-meta-date">
									<%=article.time%>
								</time>
								<span>•</span>
								<span class="post-meta-tag">文章</span>
