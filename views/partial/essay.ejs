<div class="essay">
<% articles.forEach(function(article, index) { 
if (index % 2 == 0) { %>
	<div class="row">
<% } %>
<div class="col-md-6">
	<h2><a href="<%= article.url%>"><%= article.title%></a></h2>
	<p><small class="text-muted">作者：<%= article.user%>&nbsp;时间：<%= article.time %></small></p>

	<p>
		<%- article.text %>
	</p>
	<span class="glyphicon glyphicon-eye-open"><%=article.view%></span>
	<span class="glyphicon glyphicon-thumbs-up"><%=article.up%></span>
</div>

<% if (index % 2 == 1) { %>
</div>	
<% } %>

<% }) %>
<% if (articles.length % 2 != 0) { %>
</div>
<% } %>
</div>